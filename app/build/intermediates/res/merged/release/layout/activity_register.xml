<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_marginTop="10dp"
            android:id="@+id/til_name"
            >

            <bigappcompany.com.artistbooking.widgets.MyCustomEditText
                android:hint="@string/name"
                android:textSize="@dimen/text_normal"
                android:id="@+id/txt_name"
                android:inputType="textPersonName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/til_name"
            android:id="@+id/til_email"
            >
            <bigappcompany.com.artistbooking.widgets.MyCustomEditText
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:id="@+id/txt_email"
                android:textSize="@dimen/text_normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/til_email"
            android:id="@+id/til_mobile"
            >
            <bigappcompany.com.artistbooking.widgets.MyCustomEditText
                android:hint="@string/mobile"
                android:id="@+id/txt_mobile"
                android:inputType="phone"
                android:textSize="@dimen/text_normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>




        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_below="@+id/til_mobile"
            android:id="@+id/til_city"
            android:hint="@string/city"
            >
            <AutoCompleteTextView

                android:id="@+id/txt_city"
                android:inputType="text"
                android:textSize="@dimen/text_normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>





        <!--</android.support.design.widget.TextInputLayout>-->
        <bigappcompany.com.artistbooking.widgets.MyCustomBoldButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color1"
            android:textColor="@color/white"
            android:textSize="@dimen/text_large"
            android:id="@+id/bt_sign"
            android:text="Sign Up"
            android:layout_below="@+id/til_city"
            />
    </RelativeLayout>
</ScrollView>
